/* pages/home/home.wxss */
page {
  height: 100%;
  background-color: #fff;
}

.dateImg {
  width: 100%;
  transform: scale(3, 3);
}

.date {
  height: 100%;
  width: 100%;
  overflow: hidden;
  opacity: 0;
  overflow-y: hidden;
}
.op{
  opacity: 1;
}

.hiddenDate {
  position: fixed;
  top: 80rpx;
  left: 40rpx;
  z-index: 99;
}

.content-box {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;

}

.mask-box {
  margin: 150rpx 40rpx 0rpx;
  box-sizing: border-box;
  background-color: #fff;
  height: calc(100% - 250rpx);
}

.img-box {
  position: relative;
}

.clearImg {
  width: 100%;
}

.date-info {
  position: absolute;
  bottom: 40rpx;
  left: 40rpx;
  color: #fff;
  overflow: hidden;
  line-height: 100rpx;
}

.day {
  font-size: 80rpx;
  float: left;
  margin-right: 20rpx;
}
.line{
  height: 80rpx;
  width: 2rpx;
  background-color: #fff;
  float: left;
  margin-top: 6rpx;
}
.month-week {
  float: left;
  line-height: 30rpx;
  margin-top: 16rpx;
  margin-left: 20rpx;
}

.month {
  font-size: 24rpx;
}

.week {
  font-size: 24rpx;
}

.aircle-box {
  padding: 40rpx;
}

.date-title {
  font-size: 32rpx;
  text-align: center;
  margin-bottom: 20rpx;
}

.date-content {
  font-size: 28rpx;
  line-height: 50rpx;
}
