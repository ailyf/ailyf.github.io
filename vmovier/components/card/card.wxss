/* components/card/card.wxss */

.title {
	height: 120rpx;
	background-color: #000;
	color: white;
	line-height: 120rpx;
	text-align: center;
}

.cardImg {
	width: 100%;
	filter: brightness(0.7);
	vertical-align: middle;
}

.card {
	position: relative;
	margin: 0;
	padding: 0;
}

.info {
	position: absolute;
	bottom: 0;
	left: 0;
	color: white;
	padding: 0 0 30rpx 30rpx;
}

.style-dt {
	margin-bottom: 20rpx;
	font-size: 28rpx;
}
.navigator{
	margin: 0;
	padding: 0;
}